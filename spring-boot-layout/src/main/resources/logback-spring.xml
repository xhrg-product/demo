<?xml version="1.0" encoding="UTF-8"?>
<!-- 日志级别从低到高分为TRACE < DEBUG < INFO < WARN < ERROR < FATAL，如果设置为WARN，则低于WARN的信息都不会输出 -->
<configuration debug="true" scan="false">
    <!--从环境变量中获取APP_ID,日志文件保存到指定位置-->
    <property name="LOG_PATH" value="/data/logs/${APP_ID:-undefinedappid}/${hostName}"/>
    <property name="LOG_PATTERN" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] [%thread] [%X{apm_traceId}] [%X{apm_traceSegmentId}] [%X{apm_spanId}] [%X{tag_first}] [%X{tag_seconde}] [%X{tag_third}] %logger{36} %line - 【txid %X{txid}】 %msg%xEx%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <file>${LOG_PATH}/applog.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/applog-%d{yyyyMMdd}-%i.log.gz</fileNamePattern>
            <maxFileSize>512MB</maxFileSize>
            <maxHistory>24</maxHistory>  <!-- 保存24天 -->
            <totalSizeCap>5GB</totalSizeCap><!-- 总日志大小 -->
        </rollingPolicy>
    </appender>

    <appender name="ASYNC-FILE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <neverBlock>true</neverBlock>
        <!-- 异步打印堆栈信息不丢失-->
        <includeCallerData>true</includeCallerData>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="FILE"/>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <neverBlock>true</neverBlock>
        <!-- 异步打印堆栈信息不丢失-->
        <includeCallerData>true</includeCallerData>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="STDOUT"/>
    </appender>

    <root level="${logging.level.root:-info}">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="ASYNC-FILE"/>
    </root>

</configuration>
